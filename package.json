{
  "url": "https://tiddly-gittly.github.io/Modern.TiddlyDev/",
  "license": "MIT",
  "version": "0.0.2",
  "scripts": {
    "reset": "rimraf ./**/node_modules",
    "clean": "rimraf dist",
    "prepare": "husky install",
    "update": "npm-check-updates -u",
    "new": "tiddlywiki-plugin-dev new",
    "dev": "tiddlywiki-plugin-dev dev",
    "tw-build-vanilla": "npx tailwindcss --output ./src/tiddlywiki-tailwindcss/files/styles.dev.css -c tw-preset.js",
    "tw-build": "npx tailwindcss --output ./src/tiddlywiki-tailwindcss/files/styles.min.css --minify -c tw-preset.js",
    "tw-watch": "npx tailwindcss --output ./src/tiddlywiki-tailwindcss/files/styles.min.css --minify -c tw-preset.js -w",
    "build": "npm run clean && tiddlywiki-plugin-dev build",
    "build:library": "npm run clean && tiddlywiki-plugin-dev build --library --output dist/library",
    "publish": "npm run clean && tiddlywiki-plugin-dev publish",
    "publish:offline": "npm run clean && tiddlywiki-plugin-dev publish --offline"
  },
  "engines": {
    "node": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "node --max_old_space_size=8192 ./node_modules/eslint/bin/eslint.js --fix --color --cache --quiet"
    ],
    "*.{js,jsx,mjs,mjsx,cjs,cjsx}": [
      "node --max_old_space_size=8192 ./node_modules/eslint/bin/eslint.js --fix --color --cache --quiet"
    ]
  },
  "devDependencies": {
    "tailwindcss": "^3.2.7",
    "@tailwindcss/typography": "^0.5.9",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.21",
    "postcss-import": "^15.1.0",
    "@modern-js/eslint-config": "^2.10.0",
    "@modern-js/tsconfig": "^2.10.0",
    "@types/node": "^18.15.5",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "rimraf": "^4.4.1",
    "ts-node": "^10.9.1",
    "tw5-typed": "^0.2.27",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "npm-check-updates": "^16.8.0",
    "tiddlywiki": "^5.2.6",
    "tiddlywiki-plugin-dev": "^0.0.34"
  }
}
